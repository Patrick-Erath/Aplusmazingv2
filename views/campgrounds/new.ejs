<% include ../partials/header %>

    
    <div class="row">
        <h1 style="text-align: center">Create a new post</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" placeholder="class code (e.g MATH 133)">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[contact]" placeholder="contact e-mail">
                </div>
                <div class="form-group">
                    <div class="btn-group" data-toggle="buttons">
                          <label class="btn btn-primary active">
                            <input type="radio" name="campground[class]" id="option1" autocomplete="off" checked value="TEACHER"> I am a Tutor
                          </label>
                          <label class="btn btn-primary">
                            <input type="radio" name="campground[class]" id="option2" autocomplete="off" value="STUDENT"> I am a Student
                          </label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="cost">Hourly Cost :</label>
                    <input class="form-control" type="number" name="cost" id="cost" placeholder="9.99" step="0.01" min="0" required>
                </div>
                <div class="form-group">
                    <label for="image">  Picture Describing the Class :</label>
                    <input type="file" id="image" name="image"  accept="image/*" required>
                </div>
                <div class="form-group">
                    <textarea rows="6" cols="25" class="form-control" name="description" placeholder="Class description"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
    
    
    <ul class="background">
        <li>
        </li>
    </ul>
    
    
    
<% include ../partials/footer %>
               