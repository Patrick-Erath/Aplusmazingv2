<% include ./partials/header %>


<div class="row">
    <h1 style="text-align:center">Sign up!</h1>
    <hr class="theHr">
    <div style="width:30%; margin: 25px auto;">
        <form action="/register" method="post">
            <div class="form-group">
                <input class="form-control" type="text" name="username" placeholder="username">
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password" placeholder="password">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="firstName" placeholder="First Name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="lastName" placeholder="Last Name">
            </div>
            <div class="form-group">
                <input class="form-control" type="email" name="email" placeholder="email@hotmail.com">
            </div>
            <div class="form-group">
                    <!-- <label for="image"> Profile Picture :</label>
                    <input type="file" id="image" name="avatar"  accept="image/*" required>-->
                    <label for="image"> Choose an avatar :</label>
                    <div class="btn-group" data-toggle="buttons">
                          <label class="btn btn-primary active btn-lg">
                            <input type="radio" name="avatar" id="option1" autocomplete="off" checked value="1"><i class="fas fa-smile-beam"></i>
                          </label>
                          <label class="btn btn-primary active btn-lg">
                            <input type="radio" name="avatar" id="option1" autocomplete="off" checked value="2"><i class="fas fa-grin-tongue-squint"></i>
                          </label>
                          <label class="btn btn-primary active btn-lg">
                            <input type="radio" name="avatar" id="option1" autocomplete="off" checked value="3"><i class="fas fa-grin-tongue-wink"></i>
                          </label>
                          <label class="btn btn-primary active btn-lg">
                            <input type="radio" name="avatar" id="option1" autocomplete="off" checked value="4"><i class="fas fa-grin-stars"></i>
                          </label>
                          <label class="btn btn-primary active btn-lg">
                            <input type="radio" name="avatar" id="option1" autocomplete="off" checked value="5"><i class="fas fa-smile-wink"></i>
                          </label>
                          <label class="btn btn-primary active btn-lg">
                            <input type="radio" name="avatar" id="option1" autocomplete="off" checked value="6"><i class="fas fa-grin-beam-sweat"></i>
                          </label>
                    </div>
            </div>
            <div class="form-group">
                <textarea class="form-control" type="text" name="description" rows="6" cols="25" placeholder="Tell us about yourself!"></textarea>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="adminCode" placeholder="Your Major and/or Degree">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Sign up</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

    <ul class="background">
        <li>
        </li>
    </ul>

<% include ./partials/footer %>